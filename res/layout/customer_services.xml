<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
   >
    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:weightSum="2"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal" >

            <RelativeLayout
                android:id="@+id/product_quality"
                android:onClick="onCproduct_qualityButtonClicked"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentStart="true"
                    android:gravity="center"
                    android:layout_marginTop="30dp"
                    android:text="Product Quality"
                    android:textColor="#111111"
                    android:textSize="16dp" />

                <ImageView
                    android:id="@+id/new_launch"
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/productquality_icon" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/logistics"
                android:onClick="onlogisticsButtonClicked"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="2dp"
                android:layout_weight="1" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="30dp"
                    android:gravity="center"
                    android:text="Logistics"
                    android:textColor="#111111"
                    android:textSize="16dp" />

                <ImageView
                    android:id="@+id/market_survey"
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/logistics_icon" />
            </RelativeLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:weightSum="2"
            android:layout_marginTop="80dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal" >

            <RelativeLayout
                android:id="@+id/commercial_claim"
                android:onClick="oncommercial_claimButtonClicked"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="30dp"
                    android:gravity="center"
                    android:text="Commercial Claim"
                    android:textColor="#111111"
                    android:textSize="16dp" />

                <ImageView
                    android:id="@+id/advertisement"
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/commercialclaim_icon" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/marketing_support"
                android:onClick="onRmarketing_supportButtonClicked"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="30dp"
                    android:gravity="center"
                    android:text="Marketing Tools"
                    android:textColor="#111111"
                    android:textSize="16dp" />

                <ImageView
                    android:id="@+id/advertisement2"
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/marketing_tool" />
            </RelativeLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:weightSum="2"
            android:layout_marginTop="80dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal" >

            <RelativeLayout
                android:id="@+id/feedback"
                android:onClick="onFeedbackButtonClicked"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="30dp"
                    android:gravity="center"
                    android:text="Feedback"
                    android:textColor="#111111"
                    android:textSize="16dp" />

                <ImageView
                    android:id="@+id/feed_image"
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/feedback_icon" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/r_four"
                android:onClick="onRequestButtonClicked"
                android:layout_width="0dp"
                android:visibility="invisible"
                android:layout_height="match_parent"
                android:layout_weight="1" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="30dp"
                    android:gravity="center"
                    android:text="Request"
                    android:textColor="#111111"
                    android:textSize="16dp" />

                <ImageView
                    android:id="@+id/feed_image2"
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                     />
            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>
</ScrollView>