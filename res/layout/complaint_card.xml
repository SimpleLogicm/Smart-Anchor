<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    card_view:cardCornerRadius="10dp"
    card_view:cardBackgroundColor="#f483bf"
    android:layout_marginTop="8dp"
    android:elevation="4dp"
    android:clickable="true"
    tools:style="@style/CardView"
    android:id="@+id/cvComplaint">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:gravity="center"
            android:id="@+id/tvCardComplaintDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            tools:text="17-05-2018"
            android:paddingTop="5dp"
            android:textSize="20sp"/>
        <!--text view can have 91 characters-->

        <TextView
            android:id="@+id/tvCardComplaintNewComplaint"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            tools:text="abcdefghijklmnopqrstuvwxyzabcdefghijklmnopqrstuvwxyzabcdefghijklm..."
            android:textSize="20sp"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>
