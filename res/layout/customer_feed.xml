    <TextView
        android:id="@+id/txt_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="12dp"
        android:textColor="#111111"
        android:textSize="15dp"
        android:text="@string/Previous_Claims" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="30dp"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:background="#ffffff"
        android:textSize="14dp"
        android:text="" />

    <TextView
        android:id="@+id/TextView01"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="#ffffff"
        android:gravity="center"
        android:text=""
        android:textSize="14dp" />
    
       <ListView
	      android:id="@+id/C_list"
	      android:layout_marginTop="15dp"
	      android:visibility="gone"
	      android:gravity="center"
	      android:background="#ffffff"
	      android:adjustViewBounds="true"
	      android:layout_width="match_parent"
	      android:layout_height="240dp" >
   	  </ListView>

    <EditText
        android:id="@+id/claim_amount"
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:hint="@string/Claim_Amount"
        android:inputType="number"
        android:textSize="15dp"
        android:visibility="gone"
        android:ems="10" >

        <requestFocus />
    </EditText>
    
     <EditText
        android:id="@+id/new_feedback"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
         android:visibility="gone"
         android:inputType="textEmailAddress|textMultiLine"
        android:hint="@string/New_Feedback"
        android:textSize="15dp"
        android:ems="10" >

        <requestFocus />
    </EditText>
    
      <EditText
        android:id="@+id/new_complaints"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:inputType="textEmailAddress|textMultiLine"
        android:hint="@string/New_Complaints"
        android:textSize="15dp"
        android:visibility="gone"
        android:ems="10" >
        <requestFocus />
    </EditText>
	
    <LinearLayout 
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/result_image"
        android:layout_width="300dp"
        android:visibility="gone"
      	android:layout_marginRight="20dp"
        android:layout_marginLeft="25dp"
        android:layout_height="350dp"
        android:layout_gravity="center"
       	android:scaleType="fitXY" 
        android:layout_marginTop="2dp"
        android:src="@drawable/white_background"
        />
     </LinearLayout>

    <ImageView
        android:id="@+id/result_imager"
        android:layout_width="200dp"
        android:visibility="gone"
        android:layout_height="210dp"
        android:layout_gravity="center"
       	android:scaleType="fitXY" 
        android:layout_marginTop="2dp"
        android:src="@drawable/logo"
        />

     <VideoView
         android:id="@+id/videoPreview"
         android:layout_width="fill_parent"
         android:visibility="gone"
         android:layout_height="210dp"
         android:layout_marginTop="5dp"
         android:layout_margin="20dp"
         android:layout_marginBottom="20dp"
         android:layout_gravity="center" 
       />

     <LinearLayout
	    android:id="@+id/Emageview_option"    
	    android:visibility="gone" 
	    android:layout_gravity="center"
	    android:layout_marginTop="2dp"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal" >

     <ImageView
        android:id="@+id/Take_pick"
        android:src="@drawable/capture"
        android:layout_width="90dp"
        android:layout_height="35dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="0dp"/>
     
     <ImageView
        android:id="@+id/Crop_pick"
        android:src="@drawable/crop"
        android:layout_width="90dp"
        android:layout_height="35dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"/>
    
  	</LinearLayout>
     
     <LinearLayout 
	    android:id="@+id/Media_Video"    
	     android:visibility="gone" 
	    android:layout_gravity="center"
	    android:layout_marginTop="2dp"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal" >

     <ImageView
        android:id="@+id/Media_Play"
        android:src="@drawable/play"
        android:layout_width="90dp"
        android:layout_height="35dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="0dp"/>
     
     <ImageView
        android:id="@+id/Media_STOP"
        android:src="@drawable/stop"
        android:layout_width="90dp"
        android:layout_height="35dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
         android:layout_marginBottom="40dp"/>
    
  	</LinearLayout>
    
    <LinearLayout 
    android:id="@+id/Media_Button"    
    android:layout_gravity="center"
    android:layout_marginBottom="5dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/Media_image_Button"
        android:src="@drawable/capture"
        android:layout_width="110dp"
        android:visibility="gone"
        android:layout_gravity="center"
        android:layout_height="55dp"
        android:layout_marginTop="5dp"
        />
    
    <ImageView
        android:id="@+id/Media_Video_Button"
        android:src="@drawable/video"
        android:layout_width="110dp"
        android:visibility="gone"
        android:layout_gravity="center"
        android:layout_height="55dp"
        android:layout_marginTop="5dp"
       />
    </LinearLayout>
      
    <EditText
        android:id="@+id/discription"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:inputType="textEmailAddress|textMultiLine"
        android:hint="@string/Description"
        android:textSize="15dp"
        android:text=""
        android:visibility="gone"
        android:ems="10" />

    <Button
        android:id="@+id/button1"
          android:layout_width="90dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="0dp"
            android:background="#545454"
            android:layout_marginLeft="200dp"
            android:text="@string/Submit"
            android:textColor="#ffffff"/>
 
</LinearLayout>
</ScrollView>
