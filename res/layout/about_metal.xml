<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    android:orientation="vertical" >

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"

            android:layout_height="match_parent">

            <TextView
                android:id="@+id/Metal_Header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/thumbnail"
                android:maxLines="3"
                android:layout_marginTop="5dp"
                android:padding="4dp"
                android:text="About METAL"
                android:textColor="#222"
                android:textStyle="bold"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/Metal_Header_descri"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Metal_Header"
                android:padding="4dp"
                android:text="METAL facilitates the field sales organisation to interact with their respective offices in a structured and efficient manner. Thus automating the activities of the field sales using this android based field sales automation tool. This will help you to have better outlook of your targets and achievers at the same time have well coordinated field sales operation."
                android:textColor="#080707"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Metal_Header_descri"
                android:maxLines="3"
                android:layout_marginTop="5dp"
                android:padding="4dp"
                android:text="Simple Logic IT Private Ltd."
                android:textColor="#222"
                android:textStyle="bold"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/discriptionnew"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title"
                android:maxLines="3"
                android:padding="4dp"
                android:text="609, Damji Shamji Corporate Square,
Melville Estate, Next to KBC,
Ghatkopar Andheri Link Road,
Ghatkopar (E), Mumbai - 400 075.
INDIA."
                android:textColor="#080707"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/discriptionnew"
                android:maxLines="3"
                android:padding="4dp"
                android:text="Call us :"
                android:textColor="#222"
                android:textStyle="bold"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/phonenext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/phone"
                android:maxLines="3"
                android:padding="4dp"
                android:text="+91 22 6511 6620"
                android:textColor="#080707"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/phonenext2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/phonenext"
                android:maxLines="3"
                android:padding="4dp"
                android:text="+91 22 2500 6620"
                android:textColor="#080707"
                android:textSize="13dp" />

            <ImageView
                android:id="@+id/thumbnail"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_centerInParent="true"
                android:layout_margin="2dp"
                android:adjustViewBounds="true"
                android:src="@drawable/contactuslogo"
                android:layout_alignParentTop="true"
                 />

            <TextView
                android:id="@+id/email2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="3"
                android:padding="4dp"
                android:text="support@simplelogic.in"
                android:textColor="#080707"
                android:textSize="13dp"
                android:layout_below="@+id/email1"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="7dp"
                android:layout_marginEnd="7dp" />

            <TextView
                android:id="@+id/email1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:maxLines="3"
                android:padding="4dp"
                android:text="sales@simplelogic.in"
                android:textColor="#080707"
                android:textSize="13dp"
                android:layout_alignBaseline="@+id/phonenext"
                android:layout_alignBottom="@+id/phonenext"
                android:layout_alignLeft="@+id/email2"
                android:layout_alignStart="@+id/email2" />

            <TextView
                android:id="@+id/webtext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:autoLink="web"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:maxLines="3"
                android:padding="4dp"
                android:text="METAL by Simple Logic IT Pvt Ltd."
                android:textColor="#080707"
                android:textSize="15dp"
                />

            <TextView
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="3"
                android:textColor="#222"
                android:textStyle="bold"
                android:textSize="15dp"
                android:text="Email Us :"
                android:layout_marginRight="29dp"

                android:layout_below="@+id/discriptionnew"
                android:layout_alignRight="@+id/email1"
                android:layout_alignEnd="@+id/email1"
                android:layout_marginEnd="29dp" />


        </RelativeLayout>
    </android.support.v7.widget.CardView>
</ScrollView>