<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="4dp"
    android:layout_margin="5dp">

    <RelativeLayout
        android:id="@+id/l1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="1dp"
        >

        <TextView
            android:id="@+id/c_header"
            android:layout_width="match_parent"
            android:layout_marginTop="0dp"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:background="@color/bkg_card"
            android:text=""
            android:layout_marginBottom="2.5dp"
            android:padding="6dp"
            android:textColor="@android:color/white"
            android:textSize="16dp"/>

        <RelativeLayout
            android:id="@+id/l2"
            android:layout_marginTop="32dp"
            android:background="@drawable/rounded_corner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="1dp"
            >

            <TextView
                android:id="@+id/c_detail1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:gravity="center_vertical"
                android:textSize="14dp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"/>


            <TextView
                android:id="@+id/c_detail2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:visibility="gone"
                android:gravity="center_vertical"
                android:textSize="14dp"
                android:textStyle="bold"
                android:layout_below="@id/c_detail1"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"/>


            <TextView
                android:id="@+id/c_detail3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:gravity="center_vertical"
                android:textSize="14dp"
                android:textStyle="bold"
                android:layout_below="@id/c_detail2"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"/>


            <TextView
                android:id="@+id/c_detail4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:gravity="center_vertical"
                android:textSize="14dp"
                android:textStyle="bold"
                android:layout_below="@id/c_detail3"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"/>

            <TextView
                android:id="@+id/c_detail5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:gravity="center_vertical"
                android:textSize="14dp"
                android:textStyle="bold"
                android:layout_below="@id/c_detail4"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"/>
            <TextView
                android:id="@+id/c_detail6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:gravity="center_vertical"
                android:textSize="14dp"
                android:textStyle="bold"
                android:layout_below="@id/c_detail5"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"/>

            <TextView
                android:id="@+id/c_detail7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:gravity="center_vertical"
                android:textSize="14dp"
                android:textStyle="bold"
                android:layout_below="@id/c_detail6"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"/>





        </RelativeLayout>
    </RelativeLayout>




</android.support.v7.widget.CardView>