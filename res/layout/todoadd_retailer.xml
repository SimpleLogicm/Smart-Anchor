<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TODOAddRetailer">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/todoe_shop_name_h"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Shop Name"
            android:paddingLeft="5dp"
            android:textColor="@color/retailer_light_green" />

        <EditText
            android:id="@+id/todoe_shop_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/add_retailer_edittext"
            android:hint=""
            android:padding="5dp"
            android:paddingLeft="10dp"
            android:textColor="@color/black">

        </EditText>

        <TextView
            android:id="@+id/todoe_mobile_h"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:padding="5dp"
            android:text="Mobile"
            android:paddingLeft="5dp"
            android:textColor="@color/retailer_light_green" />

        <EditText
            android:id="@+id/todoe_mobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/add_retailer_edittext"
            android:hint=""
            android:padding="5dp"
            android:paddingLeft="10dp"
            android:textColor="@color/black">

        </EditText>

        <TextView
            android:id="@+id/todoe_gst_h"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:padding="5dp"
            android:text="GST"
            android:paddingLeft="5dp"
            android:textColor="@color/retailer_light_green" />

        <EditText
            android:id="@+id/todoe_gst"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/add_retailer_edittext"
            android:hint=""
            android:padding="5dp"
            android:paddingLeft="10dp"
            android:textColor="@color/black">

        </EditText>

        <TextView
            android:id="@+id/todoe_aadhar_h"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:padding="5dp"
            android:text="Aadhar"
            android:paddingLeft="5dp"
            android:textColor="@color/retailer_light_green" />
        <EditText
            android:id="@+id/todoe_aadhar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/add_retailer_edittext"
            android:hint=""
            android:padding="5dp"
            android:paddingLeft="10dp"
            android:textColor="@color/black">

        </EditText>

        <TextView
            android:id="@+id/todoe_pan_h"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:padding="5dp"
            android:text="Pan Card"
            android:paddingLeft="5dp"
            android:textColor="@color/retailer_light_green" />

        <EditText
            android:id="@+id/todoe_pan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/add_retailer_edittext"
            android:hint=""
            android:padding="5dp"
            android:paddingLeft="10dp"
            android:textColor="@color/black">

        </EditText>

        <TextView
            android:id="@+id/todoe_state_h"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:padding="5dp"
            android:text="State"
            android:paddingLeft="5dp"
            android:textColor="@color/retailer_light_green" />
        <Spinner
            android:id="@+id/todoe_state"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="10dp"
            android:background="@drawable/add_retailer_spinner"
            >

        </Spinner>


        <TextView
            android:id="@+id/todoe_city_h"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:padding="5dp"
            android:text="State"
            android:paddingLeft="5dp"
            android:textColor="@color/retailer_light_green" />
        <Spinner
            android:id="@+id/todoe_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/add_retailer_spinner"
            android:paddingRight="10dp">

        </Spinner>

        <TextView
            android:id="@+id/todoe_address_h"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:padding="5dp"
            android:text="Pan Card"
            android:paddingLeft="5dp"
            android:textColor="@color/retailer_light_green" />

        <EditText
            android:id="@+id/todoe_address"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="@drawable/add_retailer_edittext"
            android:gravity="left"
            android:hint="@string/Addressn"
            android:padding="5dp"
            android:textColor="@color/black">

        </EditText>

        <TextView
            android:id="@+id/todoe_geocordinates_h"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:padding="5dp"
            android:text="Geo Cordinates"
            android:paddingLeft="5dp"
            android:textColor="@color/retailer_light_green" />
        <EditText
            android:id="@+id/todoe_geocordinates"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/retailer_dark_brown"
            android:background="@drawable/add_retailer_edittext"
            android:hint=""
            android:padding="5dp"
            android:paddingLeft="10dp"
            android:textColor="@color/black">

        </EditText>

        <EditText
            android:id="@+id/todoe_tsi_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:visibility="gone"
            android:background="@drawable/todo_back_for_editablefalse_yellow"
            android:hint="TSI Code"
            android:padding="5dp"
            android:paddingLeft="10dp"
            android:textColor="@color/black">

        </EditText>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:id="@+id/todoe_dealer_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/add_retailer_llayout"
                android:orientation="vertical"
                android:padding="15dp">

                <TextView
                    android:id="@+id/todoe_powerdealer_h"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:padding="5dp"
                    android:text="Power Dealer"
                    android:paddingLeft="5dp"
                    android:textColor="@color/retailer_light_green" />

                <Spinner
                    android:id="@+id/todoe_powerdealer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingRight="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/add_retailer_spinner"
                   >

                </Spinner>

                <TextView
                    android:id="@+id/todoe_iaqdealer_h"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:padding="5dp"
                    android:text="IAQ Dealer"
                    android:paddingLeft="5dp"
                    android:textColor="@color/retailer_light_green" />
                <Spinner
                    android:id="@+id/todoe_iaqdealer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingRight="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/add_retailer_spinner"
                    >

                </Spinner>


                <TextView
                    android:id="@+id/todoe_lightingdealer_h"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:padding="5dp"
                    android:text="Lighting Dealer"
                    android:paddingLeft="5dp"
                    android:textColor="@color/retailer_light_green" />

                <Spinner
                    android:id="@+id/todoe_lightingdealer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingRight="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/add_retailer_spinner"
                   >

                </Spinner>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="15dp"
                android:background="#ffffff"
                android:textColor="@color/retailer_light_green"
                android:text=" Dealer "
                android:textSize="12sp" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/locationimg"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/pointer">

        </ImageView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingTop="5dp">

            <Button
                android:id="@+id/buttonnoOrdercancel"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="#414042"

                android:text="@string/Cancel"
                android:textColor="#FFFFFF" />

            <Button

                android:id="@+id/buttonnoOrderSave"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"

                android:background="#414042"
                android:text="@string/Submit"
                android:textColor="#FFFFFF" />


        </LinearLayout>


    </LinearLayout>


</android.support.v4.widget.NestedScrollView>