<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:background="#ececec"
        android:layout_gravity="center" >

        <RelativeLayout
            android:id="@+id/rlout_price"
            android:layout_width="15dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:background="@drawable/single_btab"
            android:layout_weight="1.00" >

            <TextView
                android:id="@+id/textView1gh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="PRICE LIST"
                android:textColor="#111111"
                android:gravity="center"
                android:textSize="15dp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlout_stock"
            android:layout_width="15dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:background="@drawable/single_btab"
            android:layout_weight="1.00" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="STOCK"
                android:gravity="center"
                android:textColor="#111111"
                android:textSize="15dp" />
        </RelativeLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/containerNewOrder"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        >

        <Spinner
            android:id="@+id/spnBu"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:hint="Select BU"
            android:layout_marginTop="15dp"
            android:inputType="textPersonName"
            android:paddingTop="0dp" >
        </Spinner>

        <Spinner
            android:id="@+id/spnBusinessDiv"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:hint="Select Business Division"
            android:inputType="textPassword"
            android:paddingTop="10dp" />

    <Spinner
        android:id="@+id/spnCategory"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:hint="Select Category"
        android:layout_marginTop="15dp"
        android:inputType="textPersonName"
        android:paddingTop="10dp" >
    </Spinner>

    <Spinner
        android:id="@+id/spnProduct"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:hint="Select Product"
        android:inputType="textPassword"
        android:paddingTop="10dp" />

        <AutoCompleteTextView
            android:id="@+id/Product_Variant"
            android:layout_width="250dp"
            android:layout_gravity="center"
            android:inputType="textMultiLine"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="2dp"
            android:completionThreshold="1"
            android:imeOptions="actionDone"
            android:ems="10"
            android:singleLine="true"
            android:textSize="15dp"
            android:drawableRight="@drawable/search_icon"
            android:hint="Search Variant">

            <requestFocus />
        </AutoCompleteTextView>

        <android.support.v7.widget.RecyclerView
        android:id="@+id/cardList"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    </LinearLayout>
</LinearLayout>