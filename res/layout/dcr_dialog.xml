<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/pro_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:gravity="center"
        android:textStyle="bold"
        android:padding="5dp"
        android:layout_toLeftOf="@+id/dcr_cross"
        android:textSize="@dimen/text_size_header"
        android:text="Promotional Activity" />

    <ImageView
        android:id="@+id/dcr_cross"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/dcr_cross"/>

    <TextView
        android:id="@+id/pro_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pro_header"
        android:textColor="@color/black"
        android:layout_marginLeft="20dp"
        android:textSize="@dimen/text_content_size"
        android:layout_marginTop="20dp"
        android:text="Promotional Type : 0" />

    <View
        android:id="@+id/separator1"
        android:layout_width="match_parent"
        android:layout_below="@+id/pro_type"
        android:background="#c3c3c3"
        android:layout_marginTop="5dp"
        android:layout_height="1dp"/>

    <TextView
        android:id="@+id/pro_intime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pro_type"
        android:textColor="@color/black"
        android:layout_marginLeft="20dp"
        android:textSize="@dimen/text_content_size"
        android:layout_marginTop="10dp"
        android:text="In Time : " />

    <View
        android:id="@+id/separator2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/pro_intime"
        android:background="#c3c3c3" />

    <TextView
        android:id="@+id/pro_outtime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pro_intime"
        android:textColor="@color/black"
        android:layout_marginLeft="20dp"
        android:textSize="@dimen/text_content_size"
        android:layout_marginTop="10dp"
        android:text="Out Time :" />


    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:visibility="invisible"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/pro_outtime"
        android:src="@drawable/arr_left"/>


</RelativeLayout>