    <TextView
        android:id="@+id/editTextTarget"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="@string/No_Order"
        android:layout_marginLeft="10dp"
        android:paddingTop="30dp"
        android:textColor="#060606"
        android:typeface="sans"
        android:textAlignment="center"
        android:textSize="18sp"  >
    </TextView>

    <Spinner
        android:id="@+id/spnReason"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:hint="@string/Select_City"
        android:inputType="textPassword"
        android:paddingTop="30dp" 
        android:layout_marginTop="20dp"/>

    <EditText
        android:id="@+id/edittextNoOrderreason"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:hint="@string/enter_reason"
        android:visibility="invisible"
        android:inputType="textEmailAddress|textMultiLine"
        android:paddingTop="30dp"
        android:layout_marginTop="10dp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="bottom"
        android:orientation="vertical" 
        android:layout_marginBottom="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingTop="5dp"
            android:layout_marginTop="5dp" >

            <Button
                android:id="@+id/buttonnoOrderSave"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/Submit"
                android:background="#414042"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/buttonnoOrdercancel"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/Cancel"
                android:background="#414042"
                android:layout_marginLeft="10dp"
        android:textColor="#FFFFFF"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
</ScrollView>