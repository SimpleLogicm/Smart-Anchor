<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">


    <LinearLayout
        android:id="@+id/linearLayout245"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Spinner
            android:id="@+id/order_type"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:hint="Select Category"
            android:layout_gravity="center"
            android:inputType="textPersonName"
            android:paddingTop="20dp"
            android:layout_marginTop="10dp"></Spinner>

        <EditText
            android:id="@+id/order_detail1"
            android:layout_width="250dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:enabled="false"
            android:hint="Detail 1"
            android:layout_marginTop="10dp"
            android:imeOptions="actionDone"
            android:singleLine="true">

            <requestFocus />
        </EditText>

        <EditText
            android:id="@+id/order_detail2"
            android:layout_width="250dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:enabled="false"
            android:hint="Detail 2"
            android:layout_marginTop="10dp"
            android:imeOptions="actionDone"
            android:singleLine="true">

            <requestFocus />
        </EditText>

        <Spinner
            android:id="@+id/order_typxe"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:hint="Select Category"
            android:layout_gravity="center"
            android:inputType="textPersonName"
            android:paddingTop="20dp"
            android:layout_marginTop="10dp"></Spinner>

        <EditText
            android:id="@+id/yourName"
            android:layout_width="250dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:hint="Name"
            android:layout_marginTop="10dp"
            android:imeOptions="actionDone"
            android:singleLine="true">

            <requestFocus />
        </EditText>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Please Sign below ..."
            android:layout_marginTop="10dp"
            android:textAppearance="?android:attr/textAppearanceMedium" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_below="@+id/linearLayout245"
        android:layout_above="@+id/linearLayout2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/cancel"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight=".12"
            android:text="Cancel"
            android:layout_marginLeft="2dp"
            android:textColor="#FFFFFF"/>

        <Button
            android:id="@+id/clear"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight=".12"
            android:text="Clear"
            android:layout_marginLeft="2dp"
            android:textColor="#FFFFFF"/>



        <ImageView
            android:id="@+id/get_icon"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight=".12"
            android:text=""
            android:src="@drawable/cam_iconn"
            android:background="#414042"
            android:layout_marginLeft="2dp"

            />

        <Button
            android:id="@+id/getsign"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight=".12"
            android:text="Continue"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:textColor="#FFFFFF"/>

    </LinearLayout>

</RelativeLayout>