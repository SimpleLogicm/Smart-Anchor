<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <ScrollView
        android:id="@+id/s_container_l"
        android:layout_width="fill_parent"
        android:layout_above="@+id/bottom_container"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:orientation="vertical" >
    <LinearLayout
        android:id="@+id/linearLayout245"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtWelcomeUser"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text=""

            android:textColor="#FFFFFF"
            android:background="#BDBDBD"
            android:gravity="center"
            android:textSize="15sp"  >
        </TextView>

        <Spinner
            android:id="@+id/order_type"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:hint="Select Category"
            android:layout_gravity="center"
            android:inputType="textPersonName"
            android:paddingTop="20dp"
            android:layout_marginTop="10dp"></Spinner>

        <EditText
            android:id="@+id/order_detail1"
            android:layout_width="250dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:enabled="false"
            android:drawableRight="@drawable/ic_date_range_black_24dp"
            android:hint="Detail 1"
            android:layout_marginTop="10dp"
            android:imeOptions="actionDone"
            android:singleLine="true">

            <requestFocus />
        </EditText>

        <EditText
            android:id="@+id/order_detail2"
            android:layout_width="250dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:enabled="false"
            android:inputType="number"
            android:maxLength="6"
            android:hint="Detail 2"
            android:layout_marginTop="10dp"
            android:imeOptions="actionDone"
            android:singleLine="true">

            <requestFocus />
        </EditText>

        <Spinner
            android:id="@+id/shipment_pri"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:hint="Select Category"
            android:layout_gravity="center"
            android:inputType="textPersonName"
            android:paddingTop="20dp"
            android:layout_marginTop="10dp"></Spinner>

        <Spinner
            android:id="@+id/order_payment_term"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:hint="Select Payment Term"
            android:layout_gravity="center"
            android:inputType="textPersonName"
            android:paddingTop="20dp"
            android:layout_marginTop="10dp"></Spinner>

        <EditText
            android:id="@+id/yourName"
            android:layout_width="250dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:hint="Name"
            android:layout_marginTop="10dp"
            android:imeOptions="actionDone"
            android:singleLine="true">

            <requestFocus />
        </EditText>

        <EditText
            android:id="@+id/yourRemarks"
            android:layout_width="250dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:hint="Remark"
            android:layout_marginTop="10dp"
            android:imeOptions="actionDone"
            android:singleLine="true">

            <requestFocus />
        </EditText>

    </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/bottom_container"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_gravity="bottom"
        android:layout_alignParentBottom="true"
        android:weightSum="2.0"
        android:layout_height="200dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="2dp"
            android:text="Please Sign below ..."
            android:layout_marginTop="10dp"
            android:textAppearance="?android:attr/textAppearanceMedium" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:layout_weight="1.9"
        android:orientation="horizontal" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.1"
         >

        <Button
            android:id="@+id/cancel"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight=".12"
            android:text="Cancel"
            android:layout_marginLeft="2dp"
            android:textColor="#FFFFFF"/>

        <Button
            android:id="@+id/clear"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight=".12"
            android:text="Clear"
            android:layout_marginLeft="2dp"
            android:textColor="#FFFFFF"/>



        <ImageView
            android:id="@+id/get_icon"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight=".12"
            android:text=""
            android:src="@drawable/cam_iconn"
            android:background="#414042"
            android:layout_marginLeft="2dp"

            />

        <Button
            android:id="@+id/getsign"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight=".12"
            android:text="Continue"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:textColor="#FFFFFF"/>

    </LinearLayout>
    </LinearLayout>

</RelativeLayout>
