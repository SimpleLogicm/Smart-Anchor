<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/pro_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:gravity="center"
        android:padding="5dp"
        android:background="@color/switch_incolor"
        android:textSize="@dimen/text_size_header"
        android:text="@string/in_details" />

    <TextView
        android:id="@+id/pro_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pro_header"
        android:textColor="@color/black"
        android:layout_marginLeft="20dp"
        android:textStyle="bold"
        android:textSize="@dimen/text_content_size"
        android:layout_marginTop="20dp"
        android:text="" />

    <TextView
        android:id="@+id/pro_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pro_time"
        android:textColor="@color/black"
        android:layout_marginLeft="20dp"
        android:textStyle="bold"
        android:textSize="@dimen/text_content_size"
        android:layout_marginTop="10dp"
        android:text="" />

    <TextView
        android:id="@+id/pro_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pro_date"
        android:textColor="@color/black"
        android:layout_marginLeft="20dp"
        android:textStyle="bold"
        android:textSize="@dimen/text_content_size"
        android:layout_marginTop="10dp"
        android:text="" />

    <Button
        android:id="@+id/pro_click"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="5dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/pro_address"
        android:text="@string/ok"
        android:textAllCaps="false"
        android:background="@drawable/roundedbutton"
        android:textColor="@drawable/white_color"
        android:textSize="17sp" />


</RelativeLayout>