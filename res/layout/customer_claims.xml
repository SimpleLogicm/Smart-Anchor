<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#ffffff"
        android:orientation="vertical">

        <!--<TextView-->
        <!--android:id="@+id/txtWelcomeUser"-->
        <!--android:layout_width="fill_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_gravity="center"-->
        <!--android:text="admin"-->
        <!--android:textColor="#FFFFFF"-->
        <!--android:background="#BDBDBD"-->
        <!--android:gravity="center"-->
        <!--android:textSize="15sp"  >-->
        <!--</TextView>-->

        <TextView
            android:id="@+id/txt_label"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:textColor="#111111"
            android:textSize="18dp"
            android:gravity="center"
            android:background="#f1f1f1"
            android:text="Competition Stock" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#c3c3c3"></RelativeLayout>

        <!--  <Spinner
            android:id="@+id/comp_stock"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:hint="Select City"
            android:inputType="textPassword"
            android:paddingTop="30dp"
            android:layout_marginTop="10dp"/>
         -->
        <Spinner
            android:id="@+id/category"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:hint="Select Beat"
            android:inputType="textPassword"
            android:paddingTop="20dp"
            android:layout_marginTop="10dp" />

        <Spinner
            android:id="@+id/product"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:hint="Select Retailer"
            android:inputType="textPassword"
            android:paddingTop="30dp"
            android:layout_marginTop="10dp" />

        <Spinner
            android:id="@+id/variant"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:hint="Select Retailer"
            android:paddingTop="30dp" />

        <EditText
            android:id="@+id/edit_quantity"
            android:layout_width="255dp"
            android:layout_height="50dp"
            android:maxLength="9"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:inputType="number"
            android:hint="Quantity" >
            <requestFocus />
        </EditText>

        <EditText
            android:id="@+id/edit_details"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:inputType="textEmailAddress|textMultiLine"
            android:ems="10"
            android:hint="Details" />

        <Button
            android:id="@+id/claims_submit"
            android:layout_width="90dp"
            android:layout_height="35dp"
            android:background="#545454"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="210dp"
            android:text="Submit"
            android:textColor="#ffffff" />

    </LinearLayout>
</ScrollView>