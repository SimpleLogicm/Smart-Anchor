<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:id="@+id/containerPreview"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >
    
    <ScrollView 
    android:layout_width="wrap_content"
    android:layout_height="275dp"
    android:orientation="vertical" >

    <TableLayout 
    android:id="@+id/tablePreview"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:shrinkColumns="*"
    android:stretchColumns="*" >

    <!-- Row 1 with 3 columns -->


    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/TextView01"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:background="#dcdcdc"
            android:padding="5dip"
            android:text="@string/AProduct"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/TextView01ass"
            android:layout_height="80dp"
             android:layout_width="wrap_content"
            android:background="#d3d3d3"
            android:padding="5dip"
            android:text="@string/qty"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/TextView01df"
            android:layout_height="80dp"
            android:layout_width="wrap_content"
            android:background="#cac9c9"
            android:padding="5dip"
            android:text="@string/price"
            android:textColor="#000000" />
        
        <ImageView
            android:id="@+id/ImageView01"
            android:layout_height="80dp"
            android:layout_width="wrap_content"
            android:background="#cac9c9"
            android:padding="5dip"
            android:textColor="#000000" />
        
        <ImageView
            android:id="@+id/ImageView01sd"
            android:layout_height="80dp"
            android:layout_width="wrap_content"
            android:background="#cac9c9"
            android:padding="5dip"
            android:textColor="#000000" />
    </TableRow>
    
    
</TableLayout>

  
</ScrollView>

     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
         android:layout_gravity="bottom"
        android:orientation="vertical"
        android:layout_marginBottom="10dp" >
    
          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
        android:id="@+id/txttotalPreview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="@string/Total"
        android:paddingTop="10dp"
        android:textSize="17dp" >
    </TextView>
          
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
             android:layout_marginTop="20dp" >

           
            
             <Button
                android:id="@+id/buttonPreviewAddMOre"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:text="@string/add_more"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/buttonPreviewCheckout"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/PCheckout"
                android:textColor="#FFFFFF"
                android:layout_marginLeft="6dp" />
        </LinearLayout>
        
         <Button
                android:id="@+id/buttonPreviewHome"
                android:layout_width="225dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="6dp"
                android:layout_marginLeft="1dp"
                android:text="@string/Cancel"
                android:textColor="#FFFFFF" />
    </LinearLayout>
    
    

</LinearLayout>