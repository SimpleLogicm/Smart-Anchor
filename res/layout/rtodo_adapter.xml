<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rtodo_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="3dp"
    android:layout_marginBottom="3dp">


    <androidx.appcompat.widget.CardView
        android:id="@+id/rtodo_containercard"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp">


        <LinearLayout
            android:id="@+id/sdasda"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:id="@+id/rt_count"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="0dp"
                android:layout_marginRight="0dp"
                android:layout_weight=".25"
                android:gravity="center"
                android:padding="@dimen/card_title_padding_top"
                android:text="3"
                android:textColor="@color/white"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/rt_text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="0dp"
                android:layout_marginRight="0dp"
                android:layout_weight="1.75"
                android:gravity="center"
                android:padding="@dimen/card_margin"
                android:text="PRIMARY DATA : INCOMPLETE \n PRESENT MAPPING : INCOMPLETE"
                android:textColor="@color/white"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/rt_id"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:visibility="gone"
                android:layout_margin="0dp"
                android:layout_marginRight="0dp"
                 />


        </LinearLayout>


    </androidx.appcompat.widget.CardView>


</RelativeLayout>