<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.anchor.activities.SubDealer_Home">

    <AutoCompleteTextView
        android:id="@+id/dealer_search"
        android:layout_width="match_parent"
        android:inputType="textMultiLine"
        android:scrollbars="none"
        android:completionThreshold="1"
        android:imeOptions="actionDone"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:ems="10"
        android:singleLine="true"
        android:drawableRight="@drawable/search_icon"
        android:textSize="15dp"
        android:hint="@string/search_insubmitted_subdealers" >
        <requestFocus />
    </AutoCompleteTextView>

    <ImageView
        android:id="@+id/add_new_dealer"
        android:src="@drawable/capture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dealer_search"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="50dp"/>

    <ImageView
        android:id="@+id/pending_dealers"
        android:src="@drawable/capture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/dealer_search"
        android:layout_marginTop="80dp"
        android:layout_marginRight="50dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/add_new_dealer"
        android:layout_alignStart="@+id/add_new_dealer"
        android:layout_below="@+id/add_new_dealer"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:textSize="@dimen/text_size_header"
        android:textStyle="bold"
        android:text="@string/add_new" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pending_dealers"
        android:layout_alignEnd="@+id/pending_dealers"
        android:layout_alignRight="@+id/pending_dealers"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="10dp"
        android:textSize="@dimen/text_size_header"
        android:textStyle="bold"
        android:layout_marginRight="12dp"
        android:text="@string/pending" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/logout"
        android:layout_marginBottom="40dp"
        android:layout_marginRight="40dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true" />

</RelativeLayout>
