<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <!--<TextView-->
    <!--android:id="@+id/txtWelcomeUser"-->
    <!--android:layout_width="fill_parent"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:layout_gravity="center"-->
    <!--android:text="admin"-->
    <!--android:textColor="#FFFFFF"-->
    <!--android:background="#BDBDBD"-->
    <!--android:gravity="center"-->
    <!--android:textSize="15sp"  >-->
    <!--</TextView>-->

    <LinearLayout
        android:id="@+id/tab_layout"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:background="#ececec"
        android:layout_gravity="center" >

        <RelativeLayout
            android:id="@+id/rlout_order"
            android:layout_width="15dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:background="@drawable/single_btab"
            android:layout_weight="1.00" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="Order"
                android:gravity="center"
                android:textSize="15dp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlout_customer"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:background="@drawable/single_btab"
            android:layout_weight="1.00" >

            <TextView
                android:id="@+id/textView1jkjk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:gravity="center"
                android:text="Customer Service"
                android:textColor="#111111"
                android:textSize="15dp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlout_schedule"
            android:layout_width="15dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:background="@drawable/single_btab"
            android:layout_weight="1.00" >

            <TextView
                android:id="@+id/textView1sf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="Schedule"
                android:gravity="center"
                android:textColor="#111111"
                android:textSize="15dp" />
        </RelativeLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <Spinner
                android:id="@+id/cust_state"
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:hint="Select City"
                android:inputType="textPassword"
                android:paddingTop="20dp"
                android:layout_marginTop="10dp"/>

            <Spinner
                android:id="@+id/cust_city"
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:hint="Select Beat"
                android:inputType="textPassword"
                android:paddingTop="20dp"
                android:layout_marginTop="10dp" />

            <Spinner
                android:id="@+id/cust_beat"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:hint="Select Retailer"
                android:inputType="textPassword"
                android:paddingTop="30dp"
                android:layout_marginTop="10dp" />

            <AutoCompleteTextView
                android:id="@+id/autoCompleteTextView1"
                android:layout_width="250dp"
                android:layout_gravity="center"
                android:inputType="textMultiLine"
                android:scrollbars="none"
                android:completionThreshold="1"
                android:imeOptions="actionDone"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:ems="10"
                android:singleLine="true"
                android:drawableRight="@drawable/search_icon"
                android:textSize="15dp"
                android:hint="Search Customer" >
                <requestFocus />
            </AutoCompleteTextView>



            <LinearLayout
                android:id="@+id/add_layout"
                android:layout_marginTop="1dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/customer_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:text="" />

                <TextView
                    android:id="@+id/customer_MObile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:text="" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/credit_profile_layout"
                android:layout_marginTop="5dp"
                android:visibility="gone"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/ocredit_limit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:text="" />
                <TextView
                    android:id="@+id/oamount_utstanding"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:text="" />
                <TextView
                    android:id="@+id/oamount_overdue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:layout_marginBottom="2dp"
                    android:text="" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/order_view"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <Button
                        android:id="@+id/but_neworder"
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="New Order"
                        android:background="#414042"
                        android:textColor="#FFFFFF" />

                    <Button
                        android:id="@+id/but_preorder"
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Previous Order"

                        android:background="#414042"
                        android:layout_marginLeft="10dp"
                        android:textColor="#FFFFFF"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingTop="5dp"
                    android:layout_marginTop="5dp" >

                    <Button
                        android:id="@+id/but_noorder"
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="No Order"
                        android:background="#414042"
                        android:textColor="#FFFFFF" />

                    <Button
                        android:id="@+id/but_returnorder"
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Return Order"
                        android:background="#414042"
                        android:layout_marginLeft="10dp"
                        android:textColor="#FFFFFF"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/customer_view"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:visibility="invisible"
                android:orientation="vertical"
                android:layout_marginBottom="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:visibility="gone"
                    android:orientation="horizontal" >

                    <Button
                        android:id="@+id/feedback_btn"
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Feedback"
                        android:background="#414042"
                        android:textColor="#FFFFFF" />

                    <Button
                        android:id="@+id/comp_btn"
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Complaints"
                        android:background="#414042"
                        android:layout_marginLeft="10dp"
                        android:textColor="#FFFFFF"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingTop="5dp"
                    android:visibility="gone"
                    android:layout_marginTop="5dp" >

                    <Button
                        android:id="@+id/Claims_btn"
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Claims"
                        android:background="#414042"
                        android:textColor="#FFFFFF" />

                    <Button
                        android:id="@+id/stock_btn"
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Competition Stock"
                        android:background="#414042"
                        android:layout_marginLeft="10dp"
                        android:textColor="#FFFFFF"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal" >

                    <Button
                        android:id="@+id/imag_btn"
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Picture"
                        android:visibility="gone"
                        android:background="#414042"
                        android:textColor="#FFFFFF" />

                    <Button
                        android:id="@+id/video_btn"
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="OK"
                        android:background="#414042"
                        android:layout_marginLeft="10dp"
                        android:textColor="#FFFFFF"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/schedule_view"
                android:layout_marginTop="20dp"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:layout_marginBottom="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <Button
                        android:id="@+id/buttonSchedule"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="15dp"
                        android:text="Delivery Schedule"
                        android:background="#414042"
                        android:textColor="#FFFFFF" />

                    <Button
                        android:id="@+id/buttoninvoice"
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:visibility="gone"
                        android:text="Invoice"
                        android:background="#414042"
                        android:layout_marginLeft="10dp"
                        android:textColor="#FFFFFF"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
