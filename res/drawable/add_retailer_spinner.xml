<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item><layer-list>
        <item><shape>
            <gradient
                android:angle="45"
                android:centerX="35%"
                android:centerColor="@color/retailer_light_brown"
                android:startColor="@color/retailer_light_brown"
                android:endColor="@color/retailer_light_brown"
                android:type="linear"
                />

            <stroke android:width="1dp" android:color="@color/retailer_dark_brown" />

            <corners android:radius="6dp" />

            <size
                android:width="270dp"
                android:height="30dp"
                />

            <padding android:bottom="0dp" android:left="0dp" android:right="10dp" android:top="0dp" />
        </shape></item>
        <item >
            <bitmap android:gravity="center|right"  android:src="@drawable/cdownarrownew" />
        </item>
    </layer-list></item>

</selector>