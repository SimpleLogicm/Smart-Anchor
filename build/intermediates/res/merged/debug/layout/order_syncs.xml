<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    android:orientation="vertical" >

<LinearLayout
    android:id="@+id/container"
    android:background="#FFF"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <!--<TextView-->
        <!--android:id="@+id/txtWelcomeUser"-->
        <!--android:layout_width="fill_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_gravity="center"-->
        <!--android:text="admin"-->
        <!--android:textColor="#FFFFFF"-->
        <!--android:background="#BDBDBD"-->
        <!--android:gravity="center"-->
        <!--android:textSize="20sp"  >-->
    <!--</TextView>-->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/lastsyncon"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Last Sync On"
            android:textColor="#000000"
            android:textSize="20sp"  >
        </TextView>

        <TextView
            android:id="@+id/Totalsosync"
            android:layout_width="fill_parent"
            android:layout_marginTop="40dp"
            android:layout_height="wrap_content"
            android:text="Total Orders Synced"
            android:textColor="#000000"
            android:textSize="20sp"  >
        </TextView>

    </LinearLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_gravity="center"
        android:layout_margin="30dp"
        android:orientation="vertical"
        android:weightSum="1">

        <Button
            android:id="@+id/angry_btn2"
            android:layout_marginTop="0dp"
            android:layout_gravity="center"
            android:text="Check Updates"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:background="#414042"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            />

        <Button
            android:id="@+id/angry_btn1"
            android:text="Upload Orders"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:background="#414042"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            />



        <Button
            android:id="@+id/angry_btn3"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:text="Upload Customers"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:visibility="gone"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:background="#414042"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5" />

        <Button
            android:id="@+id/angry_btn4"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:text="Upload Data"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:background="#414042"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5" />

    </LinearLayout>

</LinearLayout>

</ScrollView>